{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["es2023"],

		"paths": {
			"@/*": ["./src/*"]
		},

		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": false,

		"strict": true,
		"skipLibCheck": true,

		"outDir": "build",
		"rootDir": "src"
	},
	"include": ["src"],
	"exclude": ["knexfile.ts"]
}
